from flask import Flask, render_template, request

app = Flask(__name__)

@app.route('/')
def index():
    return render_template('index.html')

@app.route('/save', methods=['POST'])
def save_values():
    textbox1_value = request.form['textbox1']
    textbox2_value = request.form['textbox2']
    
    # You can perform further processing with the values here.
    
    return f"Textbox 1 value: {textbox1_value}<br>Textbox 2 value: {textbox2_value}"

if __name__ == '__main__':
    app.run(debug=True)
